{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"ignore": [
			"services/cloudinary.js",
			"models",
			"schema",
			"controllers/UrlObjects.js"
		],
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"noNodejsModules": "off",
				"noUndeclaredVariables": "error",
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			},
			"suspicious": {
				"noConsole": "off",
				"noConsoleLog": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
